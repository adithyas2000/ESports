@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
       <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1 class="mt-5">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <h5 class="align-items-center justify-content-center">Please Login to continue.</h5>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" >
                      <label asp-for="Input.Email" class="form-label mt-4"></label>
                  
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                  
                </div>
                <div class="form-group mb-4">
                     <label asp-for="Input.Password" class="form-label mt-4"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                   
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
              
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-primary">Login</button>
                </div>
               
            </form>
        </section>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
