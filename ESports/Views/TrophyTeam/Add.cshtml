@{
}
@model AddTrophyTeamViewModel

<h2 class="p-3 mt-4">Add teams to @Model.trophy.Name</h2>
  <hr />
<form method="post">
    <div class="border p-3 mt-4">

      
        <div asp-validation-summary="All"></div>
       
          <div class="mb-3">
            <input asp-for=@Model.trophy.Id class="form-control" hidden/>
            <input asp-for=@Model.trophy.Venue class="form-control" hidden/>
            <input asp-for=@Model.trophy.Name class="form-control" hidden/>
            <input asp-for=@Model.trophy.ClosingDate class="form-control" hidden/>
            <input asp-for=@Model.trophy.CreatedDateTime class="form-control" hidden/>
            <input asp-for=@Model.trophy.EndDate class="form-control" hidden/>
             <input asp-for=@Model.teams class="form-control" hidden/>
        </div>
          <div class="mb-3">
            <label asp-for=@Model.trophyTeam.TeamId>Team Name</label>
            <select asp-for=@Model.trophyTeam.TeamId class="form-control" asp-items=@ViewBag.Teams></select>
        </div>
         <div class="mb-3">
            <label asp-for=@Model.trophyTeam.MaxPrice>Max Price</label>
            <input asp-for=@Model.trophyTeam.MaxPrice class="form-control"/>
            <span asp-validation-for=@Model.trophyTeam.MaxPrice class="text-danger"></span>
        </div>
          <div class="mb-3">
           <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
           <a  asp-controller="Trophy" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
        </div>
        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}