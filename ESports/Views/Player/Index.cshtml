@model List<TrophyRegistration>
@{
    ViewData["Title"] = "Player Index";
}
<h1 class="text-primary mt-4 mb-4">Player List</h1>


<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr class="table-secondary">
            <th>
                Player Name
            </th>
            <th>
                Player Role
            </th>
            <th>
                Player Availablity
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-dark">
                <td>
                    <a asp-controller="Player" asp-action="Profile" asp-route-nic=@item.PlayerNIC>
                        @item.PlayerFName @item.PlayerLName
                    </a>
                </td>
                <td width="20%">
                    @item.PlayerRole
                </td>

                @if (item.CurrentTeam == "NULL")
                {
                    <td width="20%">
                        Available
                    </td>
                }
                else
                {
                    <td width="20%">
                        Sold
                    </td>
                }

            </tr>
        }
    </tbody>
</table>