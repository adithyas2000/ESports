@model TrophyRegistration



<form method="post" asp-action="UpdatePOST">
    <input asp-for="PlayerNIC" hidden />
    <input asp-for="TrophyID" hidden />
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Update Player Base Fee</h2>
        <hr />
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="PlayerFName">First Name</label>
            <input asp-for="PlayerFName" class="form-control"  />
        </div>
          <div class="mb-3">
            <label asp-for="PlayerLName">Last Name</label>
            <input asp-for="PlayerLName" class="form-control"/>
        </div>
         <div class="mb-3">
            <label asp-for="PlayerAge">Age</label>
            <input asp-for="PlayerAge" class="form-control" />
        </div>
          <div class="mb-3">
            <label asp-for="PlayerHand">Player Hand</label>
            <input asp-for="PlayerHand" class="form-control" />
        </div>
            <div class="mb-3">
            <label asp-for="PlayerRole">Player Role</label>
            <input asp-for="PlayerRole" class="form-control"  />
        </div>
         <div class="mb-3">
            <label asp-for="BaseFee"></label>
            <input asp-for="BaseFee" class="form-control" type="number"/>
            <span asp-validation-for="BaseFee" class="text-danger"></span>
        </div>
          <div class="mb-3">
           <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
           <a  asp-controller="Trophy" asp-action="Details" class="btn btn-secondary" style="width:150px">Back</a>
        </div>
        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}