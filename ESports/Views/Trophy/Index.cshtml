@using ESports.Models
@model IEnumerable<Trophy>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Trophy List</h2>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col-6 text-end">
                <a asp-controller="Trophy" asp-action="Create" class="btn btn-primary">Add New Trophy</a>
        </div>
        }
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Trophy ID
            </th>
            <th>
                Trophy Name
            </th>
            <th>
                Event Venue
            </th>
            <th>
                Event Starting Date
            </th>
            <th>
                Event Ending Date
            </th>
            <th>
                Registration/Bidding Closing Date
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                 <th>
                Actions
            </th>
            }
           
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td width="20%">
                    <a asp-controller="Trophy" asp-action="Details" asp-route-tid=@obj.Id>
                    @obj.Name
                    </a>
                </td>
                <td width="20%">
                    @obj.Venue
                </td>
                <td width="30%">
                    @obj.StartDate
                </td>
                <td width="30%">
                    @obj.EndDate
                </td>
                <td width="30%">
                    @obj.ClosingDate
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                     <td width="30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Trophy" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                            Edit
                        </a>
                        <a asp-controller="Trophy" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            Delete
                        </a>
                         <a asp-controller="Trophy" asp-action="Close" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            Close
                        </a>
                    </div>
                </td>
                }
               
                @if (obj.isClosed)
                {
                     <td width="30%">
                    <div class="w-75 btn-group" role="group">
                        <a  class="btn-dark btn">Closed</a>
                        
                    </div>
                </td>
                }
                 @if (!obj.isClosed)
                {
                      <td width="30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Registration" asp-action="Enroll" class="btn-primary btn" asp-route-tid=@obj.Id>Register</a>
                        
                    </div>
                </td>
                }

              
            </tr>
        }
    </tbody>
</table>
 
                      